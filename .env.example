# Voice Kiosk Configuration
# Copy this file to .env and adjust values for your setup

# Ollama Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_AGENT_MODEL=qwen2.5:3b
OLLAMA_CONVERSATION_MODEL=gemma2:2b
OLLAMA_TIMEOUT=120

# Whisper Configuration
WHISPER_MODEL=tiny.en
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8

# Wake Word Configuration
WAKE_WORD=max
WAKE_WORD_MODEL_PATH=./models/vosk-model-small-en-us-0.15

# Audio Configuration
AUDIO_SAMPLE_RATE=48000
AUDIO_CHANNELS=1
AUDIO_CHUNK_SIZE=4096
AUDIO_AMPLIFICATION=300.0
RECORDING_SILENCE_THRESHOLD=2000
RECORDING_SILENCE_DURATION=1.5
RECORDING_MAX_DURATION=30

# Recording Storage
RECORDINGS_DIR=/tmp/voice_kiosk_recordings

# TTS Configuration
TTS_ENGINE=pyttsx3
TTS_RATE=150
TTS_VOLUME=0.9
TTS_VOICE=

# Application Configuration
EEL_PORT=8080
DEBUG_MODE=false
LOG_LEVEL=INFO
LOG_FILE=voice_kiosk.log

# Screensaver Configuration
SCREENSAVER_TIMEOUT=15
SCREENSAVER_ENGAGEMENT_INTERVAL=180

# Agent Configuration
AGENT_MAX_ITERATIONS=5
AGENT_TIMEOUT=60

# UI Configuration
UI_WIDTH=1024
UI_HEIGHT=768
UI_KIOSK_MODE=true
